---
import { Image } from "astro:assets";
import ArtifactCard from "../../../components/common/ArtifactCard/ArtifactCard.astro";
import {
    fullCollection,
    getArtifactsByCulture
} from "../../../data/collection";
import { getLangFromUrl, useTranslations } from "../../../i18n/utils";
import Layout from "../../../layouts/Layout.astro";

export async function getStaticPaths() {
  return fullCollection.map((artifact) => ({
    params: { slug: artifact.slug },
    props: { artifact },
  }));
}

const { artifact } = Astro.props;

const relatedArtifacts = getArtifactsByCulture(artifact.culture)
  .filter((a) => a.id !== artifact.id)
  .slice(0, 3);

const currentIndex = fullCollection.findIndex((a) => a.id === artifact.id);
const prevArtifact = currentIndex > 0 ? fullCollection[currentIndex - 1] : null;
const nextArtifact =
  currentIndex < fullCollection.length - 1
    ? fullCollection[currentIndex + 1]
    : null;

const lang = getLangFromUrl(Astro.url) as "en" | "es";
const t = useTranslations(lang);

const slugToModel: Record<string, string> = {
  "hummingbird-cup": "colibri",
  "male-anthropomorphic-figurine": "sedente",
  "yax-pasaj-chan-yopaat": "yax",
} as const;

type ModelKey = keyof typeof slugToModel;
const model3D = artifact.slug in slugToModel ? slugToModel[artifact.slug as ModelKey] : undefined;

const title = `${artifact.name[lang]} - Colecci√≥n Ixiptla`;
const description = artifact.description[lang];

let canonicalURL: string | URL = `/${lang}/coleccion/${artifact.slug}`;
let imageURL: string | URL = artifact.image.src;
let alternateURLs: { en: string | URL; es: string | URL } = {
  en: `/en/collection/${artifact.slug}`,
  es: `/es/coleccion/${artifact.slug}`,
};

if (Astro.site) {
  canonicalURL = new URL(`/${lang}/coleccion/${artifact.slug}`, Astro.site);
  imageURL = new URL(artifact.image.src, Astro.site);
  alternateURLs = {
    en: new URL(`/en/collection/${artifact.slug}`, Astro.site),
    es: new URL(`/es/coleccion/${artifact.slug}`, Astro.site),
  };
}
---

<Layout 
  title={title} 
  description={description} 
  lang={lang}
  image={imageURL}
  canonicalURL={canonicalURL}
  alternateURLs={alternateURLs}
>
  <article class="pt-24 pb-16 px-4" role="main">
    <div class="mx-auto max-w-6xl">
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm text-dark/70" role="list">
          <li><a href="/" class="hover:text-main" aria-label={t("artifact.home")}>{t("artifact.home")}</a></li>
          <li aria-hidden="true"><span class="mx-2">/</span></li>
          <li>
            <a
              href={`/${lang}/${lang === "es" ? "coleccion" : "collection"}`}
              class="hover:text-main"
              aria-label={t("artifact.collection")}>{t("artifact.collection")}</a>
          </li>
          <li aria-hidden="true"><span class="mx-2">/</span></li>
          <li class="text-main font-medium" aria-current="page">{artifact.name[lang]}</li>
        </ol>
      </nav>

      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <div class="space-y-4">
          <div
            class="aspect-square rounded-2xl overflow-hidden shadow-2xl bg-light flex items-center justify-center cursor-zoom-in"
            role="img"
            aria-label={artifact.name[lang]}
            id="main-image"
          >
            <Image
              transition:name={artifact.name[lang]}
              src={artifact.image}
              alt={artifact.name[lang]}
              width={500}
              height={500}
              class="hover:scale-105 transition-transform duration-300"
            />
          </div>
          {
            model3D && (
              <div class="bg-secondary/30 p-6 rounded-xl" role="complementary" aria-labelledby="3d-model-title">
                <h3 id="3d-model-title" class="text-xl font-bold text-tertiary mb-4">
                  {t("artifact.explore3D")}
                </h3>
                <p class="text-dark/80 mb-4">
                  {t("artifact.explore3DDescription")}
                </p>
                <a
                  href={`/${lang}/experience/${model3D}`}
                  class="inline-flex items-center text-main hover:text-dark transition-colors"
                  aria-label={`${t("artifact.viewExperience")} - ${artifact.name[lang]}`}
                >
                  {t("artifact.viewExperience")}
                  <svg
                    class="w-5 h-5 ml-2"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    aria-hidden="true"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width={2}
                      d="M14 5l7 7m0 0l-7 7m7-7H3"
                    />
                  </svg>
                </a>
              </div>
            )
          }
        </div>

        <div class="space-y-8">
          <div>
            <h1 class="text-4xl font-bold text-tertiary mb-4">
              {artifact.name[lang]}
            </h1>
            <div class="flex flex-wrap gap-4 text-dark/80" role="list" aria-label={t("artifact.details")}>
              <div class="bg-secondary/30 px-4 py-2 rounded-lg" role="listitem">
                <span class="font-medium">{t("artifact.culture")}:</span>
                {artifact.culture}
              </div>
              <div class="bg-secondary/30 px-4 py-2 rounded-lg" role="listitem">
                <span class="font-medium">{t("artifact.period")}:</span>
                {artifact.period}
              </div>
            </div>
          </div>

          <div class="prose prose-lg max-w-none">
            <h2 class="text-2xl font-bold text-tertiary mb-4">
              {t("artifact.description")}
            </h2>
            <p class="text-lg text-dark/80 leading-relaxed">
              {artifact.description[lang]}
            </p>
          </div>

          <div class="sticky top-24 grid md:grid-cols-2 gap-6 bg-light rounded-xl p-6 shadow-lg" role="complementary" aria-labelledby="artifact-info-title">
            <div>
              <h3 id="artifact-info-title" class="text-lg font-bold text-tertiary mb-2">
                {t("artifact.location")}
              </h3>
              <p class="text-dark/80">
                {artifact.museum}<br />
                {artifact.location[lang]}
              </p>
            </div>
            <div>
              <h3 class="text-lg font-bold text-tertiary mb-2">
                {t("artifact.technicalInfo")}
              </h3>
              <div class="space-y-2 text-dark/80">
                {artifact.dimensions && (
                  <p>
                    <span class="font-medium">{t("artifact.dimensions")}:</span>{" "}
                    {artifact.dimensions}
                  </p>
                )}
                {artifact.material && (
                  <p>
                    <span class="font-medium">{t("artifact.material")}:</span>{" "}
                    {artifact.material}
                  </p>
                )}
                {artifact.technique && (
                  <p>
                    <span class="font-medium">{t("artifact.technique")}:</span>{" "}
                    {artifact.technique}
                  </p>
                )}
              </div>
            </div>
          </div>

          <nav class="flex justify-between pt-8 border-t border-dark/10" aria-label={t("artifact.navigation")}>
            {
              prevArtifact ? (
                <a
                  href={`/${lang}/${lang === "es" ? "coleccion" : "collection"}/${prevArtifact.slug}`}
                  class="flex items-center text-main hover:text-dark transition-colors"
                  aria-label={`${t("artifact.previous")}: ${prevArtifact.name[lang]}`}
                >
                  <svg
                    class="w-5 h-5 mr-2"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    aria-hidden="true"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width={2}
                      d="M15 19l-7-7 7-7"
                    />
                  </svg>
                  {prevArtifact.name[lang]}
                </a>
              ) : (
                <div />
              )
            }

            {
              nextArtifact ? (
                <a
                  href={`/${lang}/${lang === "es" ? "coleccion" : "collection"}/${nextArtifact.slug}`}
                  class="flex items-center text-main hover:text-dark transition-colors"
                  aria-label={`${t("artifact.next")}: ${nextArtifact.name[lang]}`}
                >
                  {nextArtifact.name[lang]}
                  <svg
                    class="w-5 h-5 ml-2"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    aria-hidden="true"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width={2}
                      d="M9 5l7 7-7 7"
                    />
                  </svg>
                </a>
              ) : (
                <div />
              )
            }
          </nav>
        </div>
      </div>

      <button
        id="back-to-top"
        class="fixed bottom-8 right-8 bg-main text-white p-3 rounded-full shadow-lg opacity-0 transition-opacity duration-300 hover:bg-dark focus:outline-none focus:ring-2 focus:ring-main focus:ring-offset-2"
        aria-label={t("artifact.backToTop")}
      >
        <svg
          class="w-6 h-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width={2}
            d="M5 10l7-7m0 0l7 7m-7-7v18"
          />
        </svg>
      </button>

      {
        relatedArtifacts.length > 0 && (
          <section class="mt-24" aria-labelledby="related-artifacts-title">
            <h2 id="related-artifacts-title" class="text-3xl font-bold text-tertiary mb-8">
              {t("artifact.related")}
            </h2>
            <div class="relative" role="region" aria-label={t("artifact.relatedItems")}>
              <div class="overflow-hidden">
                <div id="related-carousel" class="flex gap-8 transition-transform duration-300 ease-in-out">
                  {relatedArtifacts.map((related) => (
                    <div class="min-w-[300px] flex-shrink-0" role="listitem">
                      <ArtifactCard artifact={related} />
                    </div>
                  ))}
                </div>
              </div>
              
              <button
                id="prev-related"
                class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-4 bg-white/90 p-2 rounded-full shadow-lg hover:bg-white focus:outline-none focus:ring-2 focus:ring-main focus:ring-offset-2"
                aria-label={t("artifact.previousRelated")}
              >
                <svg class="w-6 h-6 text-dark" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M15 19l-7-7 7-7" />
                </svg>
              </button>
              
              <button
                id="next-related"
                class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-4 bg-white/90 p-2 rounded-full shadow-lg hover:bg-white focus:outline-none focus:ring-2 focus:ring-main focus:ring-offset-2"
                aria-label={t("artifact.nextRelated")}
              >
                <svg class="w-6 h-6 text-dark" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M9 5l7 7-7 7" />
                </svg>
              </button>
            </div>
          </section>
        )
      }
    </div>
  </article>
</Layout>

<script>
  // Back to top button functionality
  const backToTopButton = document.getElementById('back-to-top');
  
  window.addEventListener('scroll', () => {
    if (window.scrollY > 300) {
      backToTopButton?.classList.remove('opacity-0');
    } else {
      backToTopButton?.classList.add('opacity-0');
    }
  });

  backToTopButton?.addEventListener('click', () => {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  });

  // Image zoom functionality
  const mainImage = document.getElementById('main-image');
  mainImage?.addEventListener('click', () => {
    // Create modal for image zoom
    const modal = document.createElement('div');
    modal.className = 'fixed inset-0 bg-black/90 z-50 flex items-center justify-center';
    modal.innerHTML = `
      <div class="relative w-full h-full flex items-center justify-center">
        <img src="${mainImage.querySelector('img')?.src}" alt="${mainImage.getAttribute('aria-label')}" class="max-w-full max-h-full object-contain">
        <button class="absolute top-4 right-4 text-white p-2 rounded-full hover:bg-white/20" aria-label="Cerrar">
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    `;
    document.body.appendChild(modal);
    document.body.style.overflow = 'hidden';

    modal.querySelector('button')?.addEventListener('click', () => {
      modal.remove();
      document.body.style.overflow = '';
    });
  });

  // Carousel functionality
  const carousel = document.getElementById('related-carousel');
  const prevButton = document.getElementById('prev-related');
  const nextButton = document.getElementById('next-related');
  
  if (carousel && prevButton && nextButton) {
    let currentPosition = 0;
    const itemWidth = 300 + 32; // card width + gap
    const totalItems = carousel.children.length;
    const maxPosition = -(totalItems - 3) * itemWidth;

    const updateCarousel = () => {
      carousel.style.transform = `translateX(${currentPosition}px)`;
      prevButton.style.opacity = currentPosition === 0 ? '0.5' : '1';
      nextButton.style.opacity = currentPosition <= maxPosition ? '0.5' : '1';
    };

    prevButton.addEventListener('click', () => {
      if (currentPosition < 0) {
        currentPosition = Math.min(currentPosition + itemWidth, 0);
        updateCarousel();
      }
    });

    nextButton.addEventListener('click', () => {
      if (currentPosition > maxPosition) {
        currentPosition = Math.max(currentPosition - itemWidth, maxPosition);
        updateCarousel();
      }
    });

    // Initialize carousel state
    updateCarousel();
  }
</script>
