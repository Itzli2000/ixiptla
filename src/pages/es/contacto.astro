---
import Layout from '../../layouts/Layout.astro';
import ContactSection from '../../components/contact/ContactSection.astro';
import { useTranslations } from '../../i18n/utils';

const t = useTranslations('es');
---

<Layout title={t('contact.title')} lang="es">
  <main class="min-h-screen bg-gradient-to-b from-base-100 to-base-200">
    <div class="container mx-auto px-4 py-16">
      <h1 class="text-4xl font-bold text-center text-base-content mb-8">{t('contact.title')}</h1>
      <p class="text-lg text-center text-base-content/80 max-w-2xl mx-auto mb-12">
        {t('contact.description')}
      </p>
      <ContactSection lang="es" />
    </div>
  </main>
</Layout>

<style>
  main {
    background-color: hsl(var(--color-base-100));
    background-image: 
      radial-gradient(hsl(var(--color-base-300)) 1px, transparent 1px),
      radial-gradient(hsl(var(--color-base-300)) 1px, transparent 1px);
    background-size: 20px 20px;
    background-position: 0 0, 10px 10px;
    background-repeat: repeat;
  }
</style> 