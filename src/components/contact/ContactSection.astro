---
import { useTranslations } from '../../i18n/utils';

interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const email = 'ariel.molina.dev@gmail.com';
---

<section class="max-w-4xl mx-auto bg-base-100 rounded-lg shadow-lg p-8">
  <div class="grid md:grid-cols-2 gap-12">
    <div class="space-y-6">
      <div>
        <h2 class="text-2xl font-semibold text-base-content mb-4">{t('contact.getInTouch.title')}</h2>
        <p class="text-base-content/60">
          {t('contact.getInTouch.description')}
        </p>
      </div>
      
      <div class="space-y-4">
        <div class="flex items-start space-x-4">
          <div class="flex-shrink-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-medium text-base-content">{t('contact.email')}</h3>
            <a href={`mailto:${email}`} class="text-primary hover:text-primary/80 transition-colors">
              {email}
            </a>
          </div>
        </div>

        <div class="flex items-start space-x-4">
          <div class="flex-shrink-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-medium text-base-content">{t('contact.responseTime.title')}</h3>
            <p class="text-base-content/60">{t('contact.responseTime.description')}</p>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-base-200 rounded-lg p-6">
      <h3 class="text-xl font-semibold text-base-content mb-4">{t('contact.whyContactUs.title')}</h3>
      <ul class="space-y-3">
        <li class="flex items-center space-x-2">
          <svg class="h-5 w-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span class="text-base-content/80">{t('contact.whyContactUs.reasons.technical')}</span>
        </li>
        <li class="flex items-center space-x-2">
          <svg class="h-5 w-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span class="text-base-content/80">{t('contact.whyContactUs.reasons.product')}</span>
        </li>
        <li class="flex items-center space-x-2">
          <svg class="h-5 w-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span class="text-base-content/80">{t('contact.whyContactUs.reasons.partnership')}</span>
        </li>
        <li class="flex items-center space-x-2">
          <svg class="h-5 w-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span class="text-base-content/80">{t('contact.whyContactUs.reasons.general')}</span>
        </li>
      </ul>
    </div>
  </div>
</section> 