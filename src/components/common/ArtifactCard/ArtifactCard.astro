---
import { Image } from "astro:assets";
import { getLangFromUrl, useTranslations } from '../../../i18n/utils';
import type { ArtifactCardProps, Language } from '../../../types';

const { artifact } = Astro.props;
const lang = getLangFromUrl(Astro.url) as Language;
const t = useTranslations(lang);
---

<a
  href={`/${lang}/${lang === "es" ? "coleccion" : "collection"}/${artifact.slug}`}
  class="group block bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300"
>
  <div class="aspect-square relative overflow-hidden">
    <Image
      src={artifact.image}
      alt={artifact.name[lang]}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      width={400}
      height={400}
    />
  </div>
  <div class="p-6">
    <h3 class="text-xl font-bold text-tertiary mb-2 group-hover:text-main transition-colors">
      {artifact.name[lang]}
    </h3>
    <div class="flex flex-wrap gap-2 text-sm text-dark/70">
      <span class="bg-secondary/30 px-3 py-1 rounded-full">
        {artifact.culture}
      </span>
      <span class="bg-secondary/30 px-3 py-1 rounded-full">
        {artifact.period}
      </span>
    </div>
  </div>
</a>
